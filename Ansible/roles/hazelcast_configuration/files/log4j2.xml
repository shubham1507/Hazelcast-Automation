<Configuration status="WARN" monitorInterval="30">
  <Appenders>
    <RollingFile name="LogToRollingFile" fileName="/opt/HZ/diagnostics/diagnostics.log"
                 filePattern="/opt/HZ/diagnostics/diagnostics-%i.log">
      <PatternLayout>
        <Pattern>%d{ISO8601} %-5p [%c{1}] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="com.hazelcast.diagnostics" level="debug" additivity="false">
      <AppenderRef ref="LogToRollingFile"/>
    </Logger>
    <Root level="info">  </Root>
  </Loggers>
</Configuration>
